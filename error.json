{
  "description": "Response format for all errors",
  "extends": "./base.json",
  "properties": {
    "errors": {
      "description": "List of all errors that occurred",
      "type": "array",
      "required": true,
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "message": {
            "description": "Error message",
            "type": "string",
            "required": true
          }
        }
      }
    }
  }
}
